<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:camel="http://camel.apache.org/schema/spring"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans https://www.springframework.org/schema/beans/spring-beans-3.0.xsd        http://camel.apache.org/schema/spring https://camel.apache.org/schema/spring/camel-spring.xsd">
    <routeContext id="route-context-consultar-usuario" xmlns="http://camel.apache.org/schema/spring">
        <route id="route-consultar-usuario">
            <from id="from-rest-consultar" uri="direct:consultar-usuarios"/>
            <log id="log-inicio-consulta" message="=== INICIO SERVICIO CONSULTAR==="/>
            <setProperty id="_setPropertyAuthorization" propertyName="Authorization">
                <simple>${header.Authorization} </simple>
            </setProperty>
            <removeHeaders id="_removeTodosHeaders" pattern="*"/>
            <setHeader headerName="Content-Type" id="_setHeaderContentTypeCU">
                <constant>application/json</constant>
            </setHeader>
            <setHeader headerName="Accept" id="_setHeaderAcceptCU">
                <constant>application/json</constant>
            </setHeader>
            <setHeader headerName="Authorization" id="_setHeaderAuthorization">
                <simple>${property.Authorization}</simple>
            </setHeader>
            <setHeader headerName="lotacao" id="_setHeader">
                <simple>21</simple>
            </setHeader>
            <setHeader headerName="camelHttpMethod" id="_setHeaderCamelHttpMethodCC">
                <constant>POST</constant>
            </setHeader>
            <marshal id="_marshalRequest">
                <custom ref="jack"/>
            </marshal>
            <to id="_toHttpAU" uri="https4://{{url.usuarios}}?HttpMethod=POST&amp;bridgeEndpoint=true&amp;throwExceptionOnFailure=false"/>
            <choice id="_choice-resultado">
                <when id="_when-resultado-ok">
                    <simple resultType="boolean">${header.CamelHttpResponseCode} == '200'</simple>
                    <unmarshal id="_unmarshalRequest">
                        <custom ref="jack"/>
                    </unmarshal>
                </when>
            </choice>
        </route>
    </routeContext>
</beans>
