<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:camel="http://camel.apache.org/schema/spring"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans https://www.springframework.org/schema/beans/spring-beans-3.0.xsd        http://camel.apache.org/schema/spring https://camel.apache.org/schema/spring/camel-spring.xsd">
    <routeContext id="route-context-actualizar-usuario" xmlns="http://camel.apache.org/schema/spring">
        <route id="route-actualizar-usuario">
            <from id="_from-actualizar-usuario" uri="direct:actualizar-usuario"/>
            <log id="_log-inicio-actualizar-usuario" message="::Inicio Ruta actualizar Usuario::   ---> ${body}"/>
            <setProperty id="_setPropertyAuthorization-actualizar" propertyName="Authorization">
                <simple>${header.Authorization}</simple>
            </setProperty>
            <removeHeaders id="_removeTodosHeaders-actualizar" pattern="*"/>
            <setHeader headerName="Content-Type" id="_setHeaderContentTypeCU-actualizar">
                <constant>application/json</constant>
            </setHeader>
            <setHeader headerName="Accept" id="_setHeaderAcceptCU-actualizar">
                <constant>application/json</constant>
            </setHeader>
            <setHeader headerName="Authorization" id="_setHeaderAuthorization-actualizar">
                <simple>${property.Authorization}</simple>
            </setHeader>
            <setHeader headerName="lotacao" id="_setHeader-actualizar">
                <simple>21</simple>
            </setHeader>
            <setHeader headerName="camelHttpMethod" id="_setHeaderCamelHttpMethodCC-actualizar">
                <constant>POST</constant>
            </setHeader>
            <marshal id="_marshalRequest-actualizar">
                <custom ref="jack"/>
            </marshal>
            <to id="_toHttpAU-actualizar" uri="https4://{{url.usuarios}}?HttpMethod=POST&amp;bridgeEndpoint=true&amp;throwExceptionOnFailure=false"/>
            <choice id="choice-resultado">
                <when id="_when1">
                    <simple resultType="boolean">${header.camelHttpResponseCode} == '200'</simple>
                    <unmarshal id="_unmarshalRequest-actualizar">
                        <custom ref="jack"/>
                    </unmarshal>
                </when>
            </choice>
        </route>
    </routeContext>
</beans>
